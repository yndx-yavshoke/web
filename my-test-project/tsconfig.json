{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["node", "testplane"]
  },
  "include": [
    "testplane-tests/**/*",
    "testplane.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
} 