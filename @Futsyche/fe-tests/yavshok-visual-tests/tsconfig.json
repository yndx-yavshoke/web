{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "types": ["node" ],
    "baseUrl": ".",
    "paths": {
      "@helpers/*": ["src/helpers/*"],
      "@tests/*": ["testplane-tests/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "testplane-tests/*.ts",
    "typings/**/*.ts",
    "testplane.conf.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.testplane.ts"
  ]
}