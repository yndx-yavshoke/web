{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "types": ["@playwright/test", "allure-playwright"],
    "paths": {
      "auth-project": ["./auth-project/src"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}